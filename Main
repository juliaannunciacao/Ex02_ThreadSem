public class Main {
    public static void main(String[] args) {
        Porta porta = new Porta();
        Thread pessoa1 = new Pessoa(1, porta);
        Thread pessoa2 = new Pessoa(2, porta);
        Thread pessoa3 = new Pessoa(3, porta);
        Thread pessoa4 = new Pessoa(4, porta);
        pessoa1.start();
        pessoa2.start();
        pessoa3.start();
        pessoa4.start();
    }
}
